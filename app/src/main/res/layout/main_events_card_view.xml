<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginTop="@dimen/card_margin"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/events_time_text_view"
            android:layout_width="fill_parent"
            android:layout_height="48sp"
            android:background="@color/Apptheme_700"
            android:gravity="end|center_vertical"
            android:text="2015-05-15 15:00  "
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/events_title_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/events_title_side_margin"
            android:layout_marginRight="@dimen/events_title_side_margin"
            android:layout_marginTop="@dimen/events_title_top_margin"
            android:text="厦门GDG【社区开源APP项目讨论】"
            android:textSize="@dimen/events_title_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/events_location_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/events_title_top_margin"
            android:layout_marginLeft="@dimen/events_title_side_margin"
            android:layout_marginRight="@dimen/events_title_side_margin"
            android:layout_marginTop="@dimen/events_title_top_margin"
            android:text="厦门市软件园二期望海路31号1楼厦门GDG孵化器"
            android:textSize="@dimen/normal_text_size"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

